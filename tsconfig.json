{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./public/",
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "public",
    "workbench"
  ],
}